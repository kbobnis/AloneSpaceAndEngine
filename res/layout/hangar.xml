<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/hangar_button_gotospace"
        android:text="@string/gotospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/hangar_button_ship"
        android:text="@string/button_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <Button 
        android:id="@+id/hangar_button_highscores"
        android:text="@+id/button_highscores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    
</LinearLayout>